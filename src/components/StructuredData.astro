---
export interface Props {
  type: "BlogPosting" | "Person" | "WebSite";
  data: any;
}

const { type, data } = Astro.props;

let structuredData = {};

if (type === "BlogPosting") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    headline: data.title,
    description: data.description,
    author: {
      "@type": "Person",
      name: data.author || "Varun Vaidhiya",
      url: "https://varunvaidhiya.me/about",
    },
    datePublished: data.pubDatetime.toISOString(),
    dateModified:
      data.modDatetime?.toISOString() || data.pubDatetime.toISOString(),
    publisher: {
      "@type": "Person",
      name: "Varun Vaidhiya",
      logo: {
        "@type": "ImageObject",
        url: "https://varunvaidhiya.me/varun-avatar.jpg",
      },
    },
    mainEntityOfPage: {
      "@type": "WebPage",
      "@id": data.url,
    },
    image: data.ogImage || "https://varunvaidhiya.me/varun-avatar.jpg",
    articleSection: data.tags?.[0] || "Technology",
    keywords: data.tags?.join(", ") || "",
    wordCount: data.wordCount,
    timeRequired: data.readingTime,
  };
} else if (type === "Person") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "Person",
    name: "Varun Vaidhiya",
    url: "https://varunvaidhiya.me",
    image: "https://varunvaidhiya.me/varun-avatar.jpg",
    sameAs: [
      "https://github.com/varunvaidhiya",
      "https://linkedin.com/in/varunvaidhiya",
    ],
    jobTitle: "Software Engineer",
    description: "Personal website and blog of Varun Vaidhiya.",
  };
} else if (type === "WebSite") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "WebSite",
    name: "Varun Vaidhiya",
    url: "https://varunvaidhiya.me",
    description: "Personal website and blog of Varun Vaidhiya.",
    author: {
      "@type": "Person",
      name: "Varun Vaidhiya",
    },
    potentialAction: {
      "@type": "SearchAction",
      target: "https://varunvaidhiya.me/search?q={search_term_string}",
      "query-input": "required name=search_term_string",
    },
  };
}
---

<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
